<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" placeholder="Add a catchy Title" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback">
                        Title Looks good!  
                    </div>
                    <div class="invalid-feedback">
                        enter a title
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea name="listing[description]" id="" cols="30" rows="10" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        please enter a description
                    </div>
                </div>
        
                <!-- <div class="mb-3">
                    <label for="image" class="form-lable">Image</label>
                    <input type="text" name="listing[image]" placeholder="enter image link" class="form-control">
                </div> -->

                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Image</label>
                    <input type="file" name="listing[image]" placeholder="enter image link" class="form-control">
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input type="number" name="listing[price]" placeholder="enter price" class="form-control" required>
                    </div>
            
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" placeholder="enter country" class="form-control" required>
                        <div class="invalid-feedback">
                            enter a valid country
                        </div>
                    </div>
                </div>
        
        
                <div class="mb-3">
                    <label for="location" class="form-lable">location</label>    
                    <input type="text" name="listing[location]" placeholder="enter location" class="form-control" required>
                    <div class="invalid-feedback">
                        enter a valid location
                    </div>
                </div>
                <button class="btn btn-dark mb-3">ADD</button>
            </form>
        </div>
    </div>